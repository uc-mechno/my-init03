"sort-order": [
  ["$variable", "$import", "$extend"],
  [
    /* 位置・ボックスモデル関連 */
    "position", "top", "right", "bottom", "left", "z-index",
    "display", "visibility", "float", "clear", "overflow", "overflow-x", "overflow-y",
    "width", "min-width", "max-width", "height", "min-height", "max-height",
    "box-sizing", "margin", "margin-top", "margin-right", "margin-bottom", "margin-left",
    "padding", "padding-top", "padding-right", "padding-bottom", "padding-left",

    /* 境界・背景 */
    "border", "border-top", "border-right", "border-bottom", "border-left",
    "border-width", "border-style", "border-color", "border-radius",
    "background", "background-color", "background-image", "background-position", "background-size",
    "box-shadow", "opacity",

    /* フォントとテキスト */
    "color", "font", "font-family", "font-size", "font-weight", "line-height",
    "text-align", "text-decoration", "text-transform", "letter-spacing", "white-space",

    /* フレックスボックス・グリッド */
    "flex", "flex-direction", "flex-wrap", "flex-flow", "justify-content",
    "align-items", "align-content", "align-self", "order",
    "grid", "grid-template", "grid-template-columns", "grid-template-rows",

    /* アニメーション */
    "transition", "transform", "animation"
  ],
  ["$include"]
]
