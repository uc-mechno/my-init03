"sort-order": [
  ["$variable", "$import", "$extend"],
  [
    /* 特殊なプロパティ */
    "content",

    /* 位置関連 */
    "position", "top", "right", "bottom", "left", "z-index",

    /* 表示と配置 */
    "display", "flex", "flex-direction", "flex-wrap", "justify-content",
    "align-items", "align-content", "order", "float", "clear",

    /* サイズ設定 */
    "width", "min-width", "max-width", "height", "min-height", "max-height",

    /* マージン・パディング */
    "margin", "margin-top", "margin-right", "margin-bottom", "margin-left",
    "padding", "padding-top", "padding-right", "padding-bottom", "padding-left",

    /* ボーダー */
    "border", "border-width", "border-style", "border-color", "border-radius",

    /* 背景 */
    "background", "background-color", "background-image", "background-repeat",
    "background-position", "background-size",

    /* タイポグラフィ */
    "font", "font-family", "font-size", "font-weight", "line-height",
    "text-align", "text-transform", "text-decoration", "color",

    /* その他 */
    "opacity", "box-shadow", "transition", "transform", "cursor"
  ],
  ["$include"]
]
